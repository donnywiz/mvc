{% extends 'base.html.twig' %}

{% block title %}Card Game{% endblock%}


{% block content %}
<div class="main-content">

<h1> {{ title }} </h1>

<p>
    <h4>Cards left in deck: {{ data.numberOfCards }}</h4>
</p>


{% for player, cards in data.playerhand %}
    <p>
        <h4>{{ player }}</h4>

        {% for card in cards %}
        <p>
            {{ card.suit }}
            {{ card.rank }}
            ({{ card.value }})
        </p>
        {% endfor %}
    </p>
{% endfor %}

</div>

</div>
{% endblock %}
